<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.pansari">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.Pansari">


        <activity
            android:name=".wholesalerPackage.wholesalerOrderViewPackage.OrderViewActivity"
            android:exported="true" />
        <activity
            android:name=".wholesalerPackage.wholesalerOrderViewPackage.OrderOverviewActivity"
            android:exported="true" />
        <activity
            android:name=".shopkeeperPackage.shopkeeperOrderViewActivity.OrderOverviewActivity"
            android:exported="true" />
        <activity
            android:name=".shopkeeperPackage.shopkeeperOrderViewActivity.OrderViewActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/blue" />

        <activity
            android:name=".shopkeeperPackage.WholesalerProductOverviewPackage.WholesalerProductsOverview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".wholesalerPackage.WholesalerProductOverviewPackage.WholesalerProductOverview"
            android:parentActivityName=".wholesalerPackage.WholesalerMainActivityPackage.WholesalerMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".wholesalerPackage.WholesalerMainActivityPackage.WholesalerMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".loginAndSignupPackage.SignupPackage.SignupActivity"
            android:parentActivityName=".loginAndSignupPackage.LoginPackage.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".loginAndSignupPackage.LoginPackage.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".loginAndSignupPackage.StartActivityPackage.StartActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shopkeeperPackage.ShopkeeperMainActivityPackage.ShopkeeperMainActivity"
            android:screenOrientation="portrait" />


    </application>

</manifest>